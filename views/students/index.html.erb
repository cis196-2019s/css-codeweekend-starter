<p id="notice"><%= notice %></p>

<h1>Students</h1>

<% if @students.empty? %>
  <p>No students yet...</p>
<% else %>
  <ul>
    <% @students.each do |student| %>
      <li><%= link_to student.full_name, "/students/#{student.id}", class: 'btn btn-primary' %> | enrolled in <%= pluralize student.courses.size, 'course' %></li>
    <% end %>
  </ul>
<% end %>

<br>

<%= link_to 'New Student', '/students/new', class: 'btn btn-primary' %>
